@model List<Category>

<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center">Category list </h1>
                </div>
                <div class="justify-content-end">
                    <a class="btn btn-outline-secondary" asp-area="Admin" asp-action="Create" asp-controller="Category">Create New Category</a>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <th>Name</th>
                            <th>DisplayOrder</th>
                            <th>Edit/Delete</th>
                        </thead>
                        <tbody>
                            @foreach(var i in Model)
                                {
                                    <tr>
                                        <td>@i.Name</td>
                                        <td>@i.DisplayOrder</td>
                                        <td>
                                            <a class="btn btn-outline-primary" asp-action="Edit" asp-area="Admin" asp-controller="Category" asp-route-id="@i.Id">Edit</a>
                                            <a class="btn btn-outline-danger" asp-action="Delete" asp-area="Admin" asp-controller="Category" asp-route-id="@i.Id">Delete</a>
                                        </td>
                                     </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>